<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="26dp"
        app:cardElevation="0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/background_crop"
            android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Golden Days\nRadio"
        android:gravity="center"
        android:layout_margin="15dp"
        android:fontFamily="@font/aclonica"
        android:layout_centerHorizontal="true"
        android:textSize="22sp"
        android:textStyle="bold" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/heading"
        android:layout_above="@id/volumeLayout"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#211F20"
        app:strokeWidth="0dp">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/img" />

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:id="@+id/volumeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="50dp"
        android:layout_above="@id/bottom"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/volumeIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/volume_high_solid" />

        <com.google.android.material.slider.Slider
            android:id="@+id/volume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:trackCornerRadius="100dp"
            app:trackStopIndicatorSize="0dp"
            android:valueFrom="0"
            android:valueTo="15"
            android:stepSize="1"
            app:thumbWidth="5dp"
            app:thumbHeight="5dp"
            app:thumbRadius="100dp"
            app:trackThickness="15dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_margin="25dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            android:layout_margin="10dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/white"
            app:strokeWidth="0dp">

            <ImageView
                android:id="@+id/playIcon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                app:tint="@color/golden"
                android:src="@drawable/play_solid" />

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:textStyle="bold"
            android:fontFamily="@font/aclonica"
            android:text="@string/website"
            android:textSize="13sp" />

    </LinearLayout>

</RelativeLayout>